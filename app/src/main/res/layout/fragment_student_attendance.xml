<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_login.StudentAttendanceFragment"
    android:orientation="vertical"
    android:weightSum="10">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="\nSelect Range"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/aclonica"
        android:textSize="24sp"
        android:paddingTop="30dp"
        android:drawableTop="@drawable/attendance80"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From :"
            android:textSize="24sp"
            android:paddingBottom="10dp"/>
        <EditText
            android:id="@+id/attendance_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="MM/DD/YYYY"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:inputType="date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To :"
            android:textSize="24sp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"/>
        <EditText
            android:id="@+id/attendance_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="MM/DD/YYYY"
            android:clickable="true"
            android:inputType="date"/>
    </LinearLayout>

    <Button
        android:id="@+id/get_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Report"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>