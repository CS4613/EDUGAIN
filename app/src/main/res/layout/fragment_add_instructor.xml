<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_instructor_panel.AddInstructorFragment"
    android:layout_margin="5dp"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Instructor"
            android:fontFamily="@font/aclonica"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/instructorName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Full Name"
            android:textAlignment="center"
            android:inputType="text"/>

        <EditText
            android:id="@+id/instructorEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Email Address"
            android:textAlignment="center"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/instructorPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Password"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/instructorPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Phone Number"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/instructorAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Address"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_addInstructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:background="@drawable/custom_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</LinearLayout>