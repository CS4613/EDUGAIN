<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_login.UpdateStudentFragment"
    android:orientation="vertical"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Student"
            android:fontFamily="@font/aclonica"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/editStudentPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Phone Number"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/editStudentAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="15"
            android:layout_margin="15dp"
            android:background="@drawable/custom_edittext"
            android:hint="Address"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/updateStudentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_password"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/chk_delete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Delete Profile"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:checked="false"
            android:layout_gravity="left"/>

        <Button
            android:id="@+id/btn_updateStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:background="@drawable/custom_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>